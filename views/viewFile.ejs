<style> 
	html, body{ background-color: black; } 
	.img-class{ 
		background-color: black; 
		max-width: 100%; 
		max-height: 100%; 
		display: block; 
		margin: auto; 
		position: absolute; 
		top: 0; bottom: 0; 
		left: 0; right: 0;
		object-fit: contain;
	} 
</style>
<style>
    html, body {
      margin: 0;
      padding: 0;
      background-color: black;
      height: 100%;
      overflow: hidden;
      color: white;
    }

    .viewer-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .img-class, .video-class, .pdf-class {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      background-color: black;
    }

    .fallback-link {
      color: white;
      font-size: 1.2rem;
      text-align: center;
    }
  </style>
<!-- <img class="img-class img-fluid" style=" " src="<%= data %>" alter="Image"/> --> 
<!-- <embed class="img-class" src="<%= data %>" width="100%" height="100%"> -->
<div class="viewer-wrapper">

    <%
		if(data){
      const fileUrl = data; // Your file URL passed to EJS
      const fileExt = fileUrl.split('.').pop().toLowerCase();
    %>
	
    <% if (['jpg', 'jpeg', 'png', 'gif', 'webp'].includes(fileExt)) { %>
      <img class="img-class" src="<%= fileUrl %>" alt="Image Preview">
    
    <% } else if (['mp4', 'webm', 'ogg'].includes(fileExt)) { %>
      <video class="video-class" controls autoplay>
        <source src="/video/<%= file_id %>" type="video/<%= fileExt %>">
        Your browser does not support the video tag.
      </video>

    <% } else if (fileExt === 'pdf') { %>
      <embed class="pdf-class" src="<%= fileUrl %>" width="100%" height="100%" type="application/pdf">

    <% } else { %>
      <div class="fallback-link">
        <p>This file type is not supported for preview.</p>
        <a href="<%= fileUrl %>" download class="btn btn-light">Download File</a>
      </div>
    <% }} %>
  </div>
